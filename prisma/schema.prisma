generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  NEW
  REVIEW
  FIRST_INTERVIEW
  SECOND_INTERVIEW
  DOCUMENT_PASS
  FINAL_PASS
  FAILURE
}

enum Platform {
  WANTED
  SARAMIN
  ROCKETPUNCH
  MINIINTERN
  JOBPLANET
}

model Board {
  idx Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  category Category
  name String
  platform Platform
  tags Tag[]
  date DateTime
  order Int
}

model Tag {
  idx Int @id @default(autoincrement())
  tag String @unique
  boards Board[]
}